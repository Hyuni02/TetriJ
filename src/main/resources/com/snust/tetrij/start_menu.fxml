<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snust.tetrij.StartMenuController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="400" prefWidth="600">
         <children>
            <ImageView fx:id="myImageView" cache="true" fitHeight="77.0" fitWidth="198.0" pickOnBounds="true" preserveRatio="true" smooth="false">
               <image>
                  <Image url="@image/TetriJ.bmp" />
               </image>
            </ImageView>
            <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#startTetris" onKeyPressed="#onButtonSound" onMouseEntered="#onButtonSound" prefHeight="42.0" prefWidth="209.0" text="Game Start" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToSetting" onKeyPressed="#onButtonSound" onMouseEntered="#onButtonSound" prefHeight="42.0" prefWidth="209.0" text="Setting" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToScoreBoard" onKeyPressed="#onButtonSound" onMouseEntered="#onButtonSound" prefHeight="42.0" prefWidth="209.0" text="Score Board" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#exitGame" onKeyPressed="#onButtonSound" onMouseEntered="#onButtonSound" prefHeight="42.0" prefWidth="209.0" text="Exit">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="위 메뉴: ↑" translateX="250.0" translateY="50.0">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="아래 메뉴: ↓" translateX="250.0" translateY="55.0" />
         </children>
      </VBox>
   </children>
</GridPane>
